<%- include ('layouts/header') -%>
<style>
    *,
    *:before,
    *:after {
        box-sizing: inherit;
    }
    .page-title{
        margin: 1rem;
    }
    .page_detail {
        /* background-color: green; */

        width: 95vw;
        box-shadow: .2px .2px 2px rgb(197, 190, 190),
                    inset .1px .1px 2px rgb(197, 190, 190),
                    inset 60px 60px 300px rgb(212, 210, 205),
                    inset -2px -2px 10px rgb(255, 249, 249);
        margin: auto;
        text-align: justify;
        background:radial-gradient(rgb(255, 247, 247),rgb(250, 250, 250));
        
    }
    img{
        border: 1px solid rgb(212, 193, 193);
        display:grid;
        margin: auto;
    }
    @media (max-width: 600px){
        .page_detail{
            font-size: 5vw;
        }
        h1,h2,h3{
            font-size: 1.3rem;
        }
    }
    @media (max-width: 300px){
        html{
            font-size: 65%;
        }
        .page_detail{
            font-size: 2rem;
        }
    }
</style>
<html>
<h1 class="page-title"><%=title%></h1>
<div class="page_detail">
    <%-content%>
</div>
</html>
<%- include ('layouts/footer') -%>