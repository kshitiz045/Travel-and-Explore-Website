<%- include ('layouts/login_header') -%>
<style>
    .page-header {
        
        text-transform: capitalize;
    }

    img,
    p {
        display: block;
    }

    img.spi {
        width: 500px;
        height: 300px;
        
        padding: .3rem;
        position: sticky;
        top: 30px;
    }

    .image-folder {
        position: relative;
        display: flex;
        flex-grow: 1;
    }

    .image-folder .para{
        /* background-color: blue; */
        text-align: justify;
        margin: 0 .6rem 0 .5rem;
        box-shadow: 1px 2px 5px rgb(243, 239, 239)
                    ,-1px -2px 5px rgb(243, 239, 239);
        overflow: hidden;
        flex-grow: 1;
        
    }

    /* .image-folder img{
        margin-top:-1rem ;
    } */

    .images {
        display: block;
        position: sticky;
        top:335px;
        margin-top: 1rem;
        /* background-color: chocolate; */
    }
    .icon
    {

        position: sticky;
        top: 10px;
        padding: .3rem;
    }
    
    .desc-folder{
        
        display: block;
        position: sticky;
        top:450px;
        margin-top: 1rem !important;
        margin-bottom:1rem;
        margin-left: .3rem;

    }
</style>
<html>

<body>
    <h1 class="page-header"><%=p.title%></h1>
    <div class="image-folder">
        
        <div class="img">
            <!-- <a class="icon"><i class="fa fa-ellipsis-h"  aria-hidden="true"></i> -->

            
            <img class="spi" src="/products_image/<%=p._id%>/<%=p.image%>" alt="">
            <div class="col-xs-12 images">
                <ul class="gallery">
                    <%galleryImages.forEach(function(image){%>
                    <%if(image != "thumbs"){%>
                    <li>
                        <a data-fancybox="gallery" class="fancybox" id="fancy"
                            href="/products_image/<%=p._id%>/gallery/<%=image%>">
                            <img src="/products_image/<%=p._id%>/gallery/thumbs/<%=image%>" alt="">
                        </a>
                    </li>
                    <%}%>
            
            <%});%>
                </ul>
            </div>
            <div class="desc-folder">

                <p>$ <%=parseFloat(p.price).toFixed(2)%></p>
                <p><a href="/cart/add/<%=p.slug%>">Add to cart</a></p>
            </div>
        </div>
        <p class="para"><%=p.desc%></p>

    </div>


    
</body>

</html>




<%- include ('layouts/footer'); -%>





