<script>
    function myFunction(event){
        
        const name=event.target.getAttribute('name');
        if(name == 'username'){
            
            if(event.target.value != ''){
                document.getElementsByClassName('focus-input100')[0].setAttribute("style","opacity:0.1;z-index:-1; filter:alpha(opacity=50)");

            }else{
                document.getElementsByClassName('focus-input100')[0].setAttribute("style","");
            }
        }else{
            
            if(event.target.value != ''){
                document.getElementsByClassName('focus-input100')[1].setAttribute("style","opacity:0.1;z-index:-1; filter:alpha(opacity=50)");

            }else{
                document.getElementsByClassName('focus-input100')[1].setAttribute("style","");
            }
        }

        
    }
    
    
</script>

