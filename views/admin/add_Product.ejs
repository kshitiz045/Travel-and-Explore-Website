<%- include ('../layouts/adminheader') -%>
<style>
    form{
        width:99%;
        margin: auto;
        box-shadow: 1px 2px 20px rgb(194, 185, 185);
        padding: .2rem;
    }
</style>
<h2>Add a Product</h2>
<a href="/admin/products">Back to all product</a>
<br><br>
<form action="/admin/products/upload-add-product" enctype="multipart/form-data" method="POST">
    <input type="hidden" name="slug" >
    <div class="form-group">
        <label for="">Title</label>
        <input type="text"  class="form-control" name="title" value="<%=title%>" placeholder="title">
        
    </div>

    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" placeholder="Price" >
        
        
    </div>

    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" class="form-control" id="" cols="20" rows="5" placeholder="Description"><%=desc%></textarea>
        
    </div>

    <div class="form-group">
        <label for="">Image</label>
        <input type="file" class="form-control" name="image" id="img"  onchange="loadFile(event)" >
        <img  id="imgPreview" width="150" height="100">
        
    </div>

    <br>
    
    <button class="btn btn-default">Submit</button>
</form>
<script>
    var loadFile = function(event) {
        var image = document.getElementById('imgPreview');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
    </script>
<%- include ('../layouts/adminfooter') -%>
